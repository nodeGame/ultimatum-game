extends iframe-layout

block mainContent
    div(id='container', style='font-size: 20px')
        h1.margin-bottom=youAreTheResponder
        h3=waitingForAnOffer
        div(id='offered', style='display:none;')
            =youReceivedAnOffer
            span(id='theoffer')
            |.</br>
            input(type='button', value=accept, id='accept', class='btn btn-outline-info btn-lg')
            |&nbsp;
            input(type='button', value=reject, id='reject', class='btn btn-outline-info btn-lg')
